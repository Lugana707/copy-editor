{
  "name": "copy-editor",
  "sideEffects": false,
  "version": "0.0.1",
  "description": "Toy app to transform text into a predetermined JSON format",
  "main": "./src/index.js",
  "scripts": {
    "ci": "npm install && npm test",
    "test": "npm run depcheck && npm run lint && npm run jest",
    "depcheck": "depcheck .",
    "lint": "eslint ./src",
    "jest": "jest --coverage --reporters=default --reporters=jest-junit",
    "watch": "webpack --watch --config webpack/dev.config.js",
    "start": "webpack-dev-server --open --config webpack/dev.config.js",
    "build": "webpack --config webpack/dev.config.js",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com:kairuiwang/copy-editor.git"
  },
  "author": "Glen Wang",
  "devDependencies": {
    "@babel/core": "^7.10.2",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/plugin-transform-runtime": "^7.10.1",
    "@babel/preset-env": "^7.15.6",
    "@babel/preset-flow": "^7.10.1",
    "@babel/preset-react": "^7.14.5",
    "@testing-library/react": "^12.1.0",
    "@types/react": "^16.9.35",
    "babel-jest": "^27.2.0",
    "babel-loader": "^8.1.0",
    "babel-plugin-styled-components": "^1.10.7",
    "depcheck": "^1.4.2",
    "eslint": "^7.32.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.25.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "flow-bin": "^0.183.1",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^7.0.2",
    "jest": "^27.2.0",
    "jest-junit": "^12.2.0",
    "terser-webpack-plugin": "^1.4.3",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.11.0",
    "webpack-merge": "^4.2.2"
  },
  "dependencies": {
    "@babel/runtime": "^7.10.2",
    "react": "^16.13.1",
    "react-contenteditable": "^3.3.5",
    "react-dom": "^16.13.1",
    "react-html-parser": "^2.0.2",
    "react-json-pretty": "^2.2.0",
    "styled-components": "^4.4.1"
  },
  "jest": {
    "coverageReporters": [
      "text",
      "json",
      "html"
    ]
  }
}
